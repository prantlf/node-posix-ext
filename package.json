{
  "name": "posix-ext",
  "version": "0.4.1",
  "description": "A drop-in replacement for the Node.js modules process, fs and posix providing their POSIX functionality on both POSIX and Windows platforms.",
  "homepage": "https://github.com/prantlf/node-posix-ext/",
  "author": {
    "name": "Ferdinand Prantl",
    "email": "prantlf@gmail.com",
    "web": "http://prantl.tk",
    "twitter": "prantlf"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prantlf/node-posix-ext.git"
  },
  "bugs": "https://github.com/prantlf/node-posix-ext/issues",
  "keywords": [
    "process",
    "fs",
    "posix",
    "filesystem",
    "getuid",
    "getgid",
    "getgroups",
    "getgrnam",
    "getgrgid",
    "getpwname",
    "getpwuid",
    "stat",
    "lstat",
    "fstat",
    "chown",
    "lchown",
    "fchown"
  ],
  "main": "./lib/posix-ext",
  "engines": {
    "node": ">= 4"
  },
  "gypfile": true,
  "scripts": {
    "postinstall": "npmpd",
    "configure": "node-gyp configure",
    "build": "node-gyp build",
    "test": "mocha --timeout 10000",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^5.1.1",
    "node-gyp": "~3.6.2",
    "semantic-release": "^15.5.0",
    "travis-deploy-once": "^5.0.0"
  },
  "dependencies": {
    "bindings": "~1.3.0",
    "nan": "~2.10.0",
    "npm-platform-dependencies": "~0.1.0",
    "posix": "^4.1.1"
  },
  "darwinDependencies": {
    "posix": "~4.1.1"
  },
  "linuxDependencies": {
    "posix": "~4.1.1"
  },
  "greenkeeper": {
    "ignore": [
      "mocha"
    ]
  }
}
